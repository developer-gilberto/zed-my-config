// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "ui_font_weight": 400.0,
    "agent_buffer_font_size": 16.0,
    "buffer_font_weight": 300.0,
    "ui_font_family": ".ZedMono",
    "minimap": {
        "show": "never"
    },
    "agent": {
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-4.1"
        },
        "model_parameters": []
    },
    "confirm_quit": true,
    "prettier": {
        "allowed": true
    },
    "languages": {
        "JavaScript": {
            "tasks": {
                "prefer_lsp": true
            }
        }
    },
    "show_wrap_guides": false,
    "tabs": {
        "file_icons": true,
        "git_status": true
    },
    "tab_bar": {
        "show": true
    },
    "title_bar": {
        "show_branch_icon": true
    },
    "features": {
        "edit_prediction_provider": "none"
    },
    "notification_panel": {
        "dock": "right"
    },
    "context_servers": {},
    "git_panel": {
        "dock": "right"
    },
    "tab_size": 4,
    "scrollbar": {
        "show": "auto"
    },
    "icon_theme": "Zed (Default)",
    "base_keymap": "VSCode",
    "buffer_font_family": "JetBrains Mono NL",
    "ui_font_size": 14.0,
    "buffer_font_size": 16,
    "preferred_line_length": 160,
    "buffer_line_height": "comfortable",
    "soft_wrap": "editor_width",
    "diagnostics": {
        "button": true,
        "include_warnings": true,
        "lsp_pull_diagnostics": {
            "enabled": true,
            "debounce_ms": 50
        },
        "inline": {
            "enabled": true,
            "update_debounce_ms": 150,
            "padding": 4,
            "min_column": 0,
            "max_severity": null
        }
    },
    "theme": "Dracula Mini",
    "terminal": {
        "blinking": "on",
        "font_family": "MesloLGL Nerd Font",
        "line_height": "comfortable",
        "cursor_shape": "bar"
    },
    "current_line_highlight": "none",
    "project_panel": {
        "button": true,
        "default_width": 240,
        "dock": "right",
        "entry_spacing": "comfortable",
        "file_icons": true,
        "folder_icons": true,
        "git_status": true,
        "indent_size": 20,
        "auto_reveal_entries": true,
        "auto_fold_dirs": false,
        "scrollbar": {
            "show": "auto"
        },
        "show_diagnostics": "all",
        "indent_guides": {
            "show": "always"
        },
        "hide_root": false
    },
    "formatter": "prettier"
}
